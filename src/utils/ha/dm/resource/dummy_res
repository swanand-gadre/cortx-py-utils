import time
import sys
import re
import os

OCF_SUCCESS=0
OCF_ERR_GENERIC=1
OCF_ERR_ARGS=2
OCF_ERR_UNIMPLEMENTED=3
OCF_ERR_PERM=4
OCF_ERR_INSTALLED=5
OCF_ERR_CONFIGURED=6
OCF_NOT_RUNNING=7

def main():
    if len(sys.argv)==1:
        print('Usage %s [monitor | start | stop | meta-data]' % sys.argv[0])
        exit()
    if sys.argv[1]=='monitor':
        return monitor()
    elif sys.argv[1]=='start':
        return start()
    elif sys.argv[1]=='stop':
        return stop()
    elif sys.argv[1]=='meta-data':
        metadata()
    else:
        print('Usage %s [monitor] [start] [stop] [meta-data]' % sys.argv[0])
        exit()

def monitor():
    #return OCF_ERR_GENERIC
    return OCF_SUCCESS
    #return OCF_NOT_RUNNING

def start():
    try:
        status = monitor()
    except:
        return OCF_ERR_GENERIC
    if status == OCF_SUCCESS:
        return OCF_SUCCESS
    elif status == OCF_NOT_RUNNING:
        try:
            stop()
        except:
            return OCF_ERR_GENERIC
    else:
        return OCF_ERR_GENERIC

def stop():
    return OCF_SUCCESS

def metadata():
    env=r'''
<?xml version="1.0"?>
<!DOCTYPE resource-agent SYSTEM "ra-api-1.dtd">
<resource-agent name="dummy_res">
<version>1.0</version>

<longdesc lang="en">
Dummy Resource agent
</longdesc>
<shortdesc lang="en">Dummy Resource agent</shortdesc>

<parameters>
<parameter>
<longdesc lang="en">
</longdesc>
<shortdesc lang="en"></shortdesc>
<content type="string"/>
</parameter>
</parameters>

<actions>
<action name="start"        timeout="20s" />
<action name="stop"         timeout="20s" />
<action name="monitor"      timeout="20s" interval="10s" depth="0" />
<action name="meta-data"    timeout="5s" />
</actions>
</resource-agent>
'''
    print(env)


if __name__ == '__main__':
    sys.exit(main())
