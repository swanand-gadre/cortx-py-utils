{
    "sspl": {
        "sspl": {
            "group": "management",
            "provider": {
                "name": "ocf:seagate:sspl_stateful_resource_agent",
                "service": "sspl",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "metadata": {
                "failure-timeout": "20s",
                "migration-threshold": 10
            },
            "dependencies": {
                "predecessors" : ["consul-c1", "rabbitmq"],
                "colocation" : ["consul-c1"],
                "relation" : []
            },
            "ha": {
                "mode": "master_slave",
                "clones" : {
                    "active": [ 1, 2 ],
                    "master": [ 1, 1 ]
                },
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        }
    }
}
