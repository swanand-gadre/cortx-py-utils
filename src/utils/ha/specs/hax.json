{
    "hare": {
        "hax-c1": {
            "group": "io",
            "provider": {
                "name": "systemd:hare-hax-c1",
                "service": "hare-hax-c1",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "metadata": {
                "failure-timeout": "20s"
            },
            "dependencies": {
                "predecessors" : ["mero-kernel", "consul-c1", "consul-c2"],
                "colocation" : ["consul-c1"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "1000"
                }
            }
        },
        "hax-c2": {
            "group": "io",
            "provider": {
                "name": "systemd:hare-hax-c2",
                "service": "hare-hax-c2",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "metadata": {
                "failure-timeout": "20s"
            },
            "dependencies": {
                "predecessors" : ["mero-kernel", "consul-c2", "consul-c1"],
                "colocation" : ["consul-c1"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "1000",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        }
    }
}
