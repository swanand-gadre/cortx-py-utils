{
    "ldap": {
        "ldap": {
            "group": "common",
            "provider": {
                "name": "systemd:slapd",
                "service": "sladap",
                "interval": "30s",
                "timeouts": [ "30s", "30s", "30s" ]
            },
            "metadata": {
                "failure-timeout": "60s"
            },
            "dependencies": {
                "predecessors" : [],
                "colocation" : [],
                "relation" : []
            },
            "ha": {
                "mode": "active_active",
                "clones" : {
                    "active": [ 1, 2]
                },
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        }
    }
}
